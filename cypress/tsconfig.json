{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "types": ["cypress", "node", "vuetify"],
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": "../",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "component/**/*.ts",
    "e2e/**/*.ts",
    "cypress/**/*.ts",
    "node_modules/cypress"
   ]
}
