{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["dom", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["node", "vue", "vuetify"],
    "paths": {
      "@/*": ["./frontend/src/*"]
    },
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": [
    "./frontend/src/**/*.ts",
    "./frontend/src/**/*.tsx",
    "./frontend/src/**/*.vue",
    "./frontend/src/**/*.d.ts",
    "./backend/**/*.ts",
    "./backend/src/**/*.ts",
    "cypress/**/*.ts"
  ]
}
